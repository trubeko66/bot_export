# Telegram Bot Configuration Template
# Copy this file to .env and fill in your actual values

# Required: Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# Required: Telegram API credentials from https://my.telegram.org
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Optional: Export Configuration
DEFAULT_FORMAT=json
INCLUDE_MEDIA_BY_DEFAULT=false
MAX_MESSAGES_PER_EXPORT=10000
EXPORT_FOLDER=/app/exports

# Optional: Debug Mode
DEBUG_MODE=false

# Optional: Docker-specific settings
COMPOSE_PROJECT_NAME=telegram-export-bot
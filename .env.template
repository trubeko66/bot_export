# Telegram Bot Configuration Template
# Copy this file to .env and fill in your actual values

# Required: Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# Required: Telegram API credentials from https://my.telegram.org
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Required for Docker: Phone number for Telegram authorization
# Format: +1234567890 (with country code)
PHONE_NUMBER=+1234567890

# Optional: Cloud password (2FA) if enabled on your account
CLOUD_PASSWORD=your_cloud_password_here

# Optional: Telegram confirmation code (set dynamically)
# This can be set at runtime: docker-compose exec telegram-bot env TELEGRAM_CODE=12345 python bot.py
TELEGRAM_CODE=

# Optional: How long to wait for confirmation code (seconds)
CODE_WAIT_TIMEOUT=60

# Optional: Export Configuration
DEFAULT_FORMAT=json
INCLUDE_MEDIA_BY_DEFAULT=false
MAX_MESSAGES_PER_EXPORT=10000
EXPORT_FOLDER=/app/exports

# Optional: Debug Mode
DEBUG_MODE=false

# Optional: Docker-specific settings
COMPOSE_PROJECT_NAME=telegram-export-bot